-- Create Integration Object that contains the access information
CREATE STORAGE INTEGRATION 
    gcp_integration
TYPE='EXTERNAL_STAGE'
STORAGE_PROVIDER='GCS'
ENABLED=TRUE
STORAGE_ALLOWED_LOCATIONS=(
    'gcs://snowflakebucket0607',
    'gcs://snowflakebucket0607json'
);

-- Update STORAGE_GCP_SERVICE_ACCOUNT and update the principles from permissions
DESC INTEGRATION
    gcp_integration;